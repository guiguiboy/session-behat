{% extends "layout.twig" %}

{% block content %}

    <form action="/login" method="post">
        {% if message is defined %}
            <div>{{ message }}</div>
        {% endif %}

        <div>
            <div>
                Login : <input type="text" name="login[username]" />
            </div>
            <div>
                Password : <input type="password" name="login[password]" />
            </div>
            <div>
                <input type="submit" name="login[submit]" />
            </div>
        </div>
    </form>

{% endblock %}